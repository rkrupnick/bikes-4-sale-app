<div class="row">
	<div class="col-md-12">
		<h2>$<%= @product.price/100 %> | <%= @product.name %></h2>
	</div>
</div>
<div class="row">
	<div class="col-md-4">
		<%= image_tag(@product.image_url, :class => 'img-zoom img-responsive', data_zoom_image: @product.image_url) %></div>
	<div class="col-md-3">
	<p>Description: <%= @product.description %></p>
	<p>Color: <%= @product.color %></p>
	<p>Average Rating: <div class="rated" data-score="<%= @product.average_rating %>"></div></p>
	
	<%= form_tag "/payments/create" do %>
		<%= hidden_field_tag(:product_id, @product.id) %>
		<%= render partial: "shared/stripe_checkout_button" %>
	<% end %>

	<%= link_to 'Edit', edit_product_path(@product) %> |
	<%= link_to 'Back', products_path %>
	</div>
</div>

<br>

<%= render 'new_comment' %>
<%= render 'comments' %>

